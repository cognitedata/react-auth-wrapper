{
    "include": ["lib", "extensions"],
    "exclude": ["**/node_modules", "**/test", "**/stories", "**/*.spec.ts", "**/samples"],
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": "./",
        "jsx": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "paths": {
            "@azure/*": [
                "./lib/*/src"
            ]
        }
    }
  }
